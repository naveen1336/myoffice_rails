    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :app_user_last_name %>
  </div>

  <div class="field">
    <%= form.label :role %>

    <%=form.select :role, [['Admin','Admin'],['User','User']] %>
    <%#= form.select :role, id: :app_user_role %>
